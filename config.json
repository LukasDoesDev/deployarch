{
  "comment-packages": "Install selected packages",
  "packages": [
    {
      "name": "i3",
      "aur": ["i3lock", "i3exit"],
      "pacman": ["i3-gaps", "i3status", "flameshot", "network-manager-applet"]
    },
    {
      "name": "music",
      "aur": [],
      "pacman": ["ncmpcpp", "mpd", "mpc"]
    },
    {
      "name": "gaming",
      "aur": ["minecraft-launcher"],
      "pacman": ["steam"]
    },
    {
      "name": "programming",
      "aur": ["vscodium-bin"],
      "pacman": ["python3", "python-pip", "elixir", "rustup", "neovim"]
    },
    {
      "name": "rice screenshot aka l33t h4xx0r",
      "comment-aur": "ttf-ubraille required for bottom",
      "aur": ["cava", "pipes.sh", "ttf-ubraille", "pfetch"],
      "pacman": ["cmatrix", "neofetch", "bottom", "htop"]
    },
    {
      "name": "scripting",
      "aur": [],
      "pacman": ["fzf", "jq", "grep", "tree", "wget", "curl"]
    },
    {
      "name": "youtube",
      "aur": ["youtube-viewer"],
      "pacman": ["youtube-dl"]
    },
    {
      "name": "system monitor",
      "comment-aur": "ttf-ubraille required for bottom",
      "aur": ["icdiff", "ttf-ubraille"],
      "pacman": ["bottom", "htop", "tcpdump"]
    },
    {
      "name": "system administration",
      "comment-aur": "ttf-ubraille required for bottom",
      "aur": ["icdiff", "ttf-ubraille"],
      "pacman": [
        "grep",
        "man-db",
        "tree",
        "unzip",
        "zip",
        "pandoc",
        "neovim",
        "bc",
        "highlight"
      ]
    },
    {
      "name": "network utilities",
      "comment-aur": "ttf-ubraille required for bottom",
      "aur": ["icdiff", "ttf-ubraille"],
      "pacman": ["rsync", "wget", "curl", "nmap"]
    },
    {
      "name": "ntfs",
      "aur": [],
      "pacman": ["ntfs-3g"]
    },
    {
      "name": "desktop applications",
      "aur": [],
      "pacman": [
        "audacity",
        "firefox",
        "nemo",
        "discord",
        "gimp",
        "inkscape",
        "sxiv",
        "zathura",
        "xdg-utils",
        "xdg-user-dirs"
      ]
    },
    {
      "name": "custom dwm",
      "pacman": [
        "base-devel",
        "git",
        "libx11",
        "libxinerama",
        "libxft",
        ""
      ]
      "script": [
        "mkdir -pv ~/dev/rice",
        "cd ~/dev/rice",
        "git clone https://github.com/LukasDoesDev/dwm-build-scripts.git",
        "cd dwm-build-scripts",
        "./full.sh install"
      ]
    },
    {
      "name": "custom dmenu",
      "script": [
        "mkdir -pv ~/dev/rice",
        "cd ~/dev/rice",
        "git clone https://github.com/LukasDoesDev/dmenu.git",
        "cd dmenu",
        "sudo make clean install"
      ]
    },
    {
      "name": "xorg + required",
      "aur": [],
      "pacman": [
        "xorg",
        "xorg-xinit",
        "xorg-xrandr",
        "xorg-xrdb",
        "webkit2gtk",
        "dunst",
        "feh",
        "picom",
        "flameshot",
        "rxvt-unicode"
      ]
    },
    {
      "name": "",
      "aur": [],
      "pacman": []
    }
  ],
  "comment-setup": "If included in any list run the commands specified",
  "setup": {
    "nemo": ["xdg-mime default nemo.desktop inode/directory"]
  }
}
